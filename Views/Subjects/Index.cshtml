@model IEnumerable<AlkemyChallange.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<h1>Materias</h1>

<p>
    <a asp-action="Create"><i class="fas fa-book"></i> Agregar</a>
</p>

<div class="container">
    <div class="row py-5">
        <div class="col-12">
            <table class="table table-hover responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Teacher)
                        </th>                        
                        <th>
                            @Html.DisplayNameFor(model => model.MaxStudents)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>

                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-blue mr-3">@item.Name.Substring(0, 2)</div>

                                    <div class="">
                                        <p class="font-weight-bold mb-0">@Html.DisplayFor(modelItem => item.Name)</p>
                                        <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.DayOfTheWeek.Name)  @Html.DisplayFor(modelItem => item.Hour)</p>
                                    </div>
                                </div>

                            </td> 
                            <td>
                                @Html.DisplayFor(modelItem => item.Teacher.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxStudents)
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-outline-info" type="button" id="dropdownMenuButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="bx bx-dots-horizontal-rounded" data-toggle="tooltip" data-placement="top"
                                           title="Actions"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.SubjectId"><i class="bx bxs-pencil mr-2"></i> Editar</a>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.SubjectId"><i class="bx bxs-trash mr-2"></i> Borrar</a>
                                    </div>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

