@model AlkemyChallange.Models.Teacher

@{
    ViewData["Title"] = "Create";
}

<h4>Agregar profesor</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DNI" class="control-label"></label>
                        <input asp-for="DNI" class="form-control" />
                        <span asp-validation-for="DNI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <p>
                            <center>
                                <a asp-action="Index" class="btn btn-outline-secondary" title="volver"><i class="fas fa-arrow-circle-left"></i> Volver</a>
                                <input type="submit" value="Crear" class="btn btn-primary" />
                            </center>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
